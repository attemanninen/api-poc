{{ form_start(form) }}
    {{ form_row(form) }}
    {% set path = task is defined ? 'app_ui_task_show' : 'app_ui_task_list' %}
    {% set path_args = task is defined ? {id: task.id} : {} %}
    <a href="{{ path(path, path_args) }}" class="btn btn-secondary">
        {{ "Cancel"|trans }}
    </a>
    <button type="submit" class="btn btn-primary">
        {{ 'Save'|trans }}
    </button>
{{ form_end(form) }}
